<Window x:Class="NS_Comment.CommentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NS_Comment" 
        xmlns:vm="clr-namespace:NS_Comment"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors" 
        d:DataContext="{d:DesignInstance Type=local:MainViewModel}"
        mc:Ignorable="d"
        MinHeight="390"
        MinWidth="475"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen"
        Title="CommentWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <StackPanel HorizontalAlignment="Left" 
                    Height="165" 
                    Grid.Column="0"
                    Grid.Row="0"
                    Margin="10,10,0,0" 
                    VerticalAlignment="Top" 
                    Width="420">
            <Label Content="Автор комментария:"
               HorizontalAlignment="Left" 
               VerticalContentAlignment="Top"
               Margin="10,0,0,0"
               HorizontalContentAlignment="Left"
               FontSize="12" VerticalAlignment="Top" Height="25" Width="123"/>
            <TextBox Height="20" TextWrapping="Wrap"
                     TextChanged="AuthorBox_TextChanged"
                     Grid.Row="0"
                     Grid.Column="0"
                     Text="{Binding AuthorName, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                     Margin="5,0,25,0"
                     Width="370"
                     FontSize="12"/>
        </StackPanel>
        <StackPanel Grid.Column="1" 
                    HorizontalAlignment="Left" 
                    Height="185" 
                    Visibility="{Binding AuthorsListVisibility, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" 
                    VerticalAlignment="Top" 
                    Width="166">
            <ListBox HorizontalAlignment="Left" 
                     SelectedIndex="{Binding Index, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     ItemsSource="{Binding Authors, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     Height="162" 
                     Width="136" Margin="10,0,0,0">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="MouseDoubleClick">
                        <i:InvokeCommandAction Command="{Binding AuthorSelectCommand}"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </ListBox>
        </StackPanel>
        <StackPanel Grid.Column="2" 
                    HorizontalAlignment="Left" 
                    Height="185" 
                    Visibility="{Binding CommentsListVisibility, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                    VerticalAlignment="Top" 
                    Width="166">
            <ListBox HorizontalAlignment="Left" 
                     SelectedIndex ="{Binding Index, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     ItemsSource="{Binding UserComments, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     Height="163" 
                     Width="136" Margin="10,0,0,0">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="MouseDoubleClick">
                        <i:InvokeCommandAction Command="{Binding CommentSelectCommand}"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </ListBox>
        </StackPanel>
        <StackPanel HorizontalAlignment="Left" 
                    Height="130" 
                    Margin="10,10,0,0" 
                    Grid.Row="1" 
                    VerticalAlignment="Top" 
                    Width="420">
            <Label Content="Комментарий:" 
               HorizontalAlignment="Left" 
               Grid.Row="1"
               Grid.Column="0"
               VerticalContentAlignment="Top"
               Margin="10,0,0,0"
               HorizontalContentAlignment="Left"
               FontSize="12" 
               VerticalAlignment="Top" 
               Height="25" 
               Width="123"/>
            <TextBox Height="100" 
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 TextChanged="CommentBox_TextChanged"
                 Grid.Row="1"
                 Grid.Column="0"
                 HorizontalAlignment="Left"
                 Text="{Binding UserComment,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                 Width="380"
                 Margin="10,0,0,0"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Left" 
                    Height="30" 
                    Orientation="Horizontal"
                    FlowDirection="LeftToRight"
                    Margin="10,144,0,0" 
                    Grid.Row="1" 
                    VerticalAlignment="Top" 
                    Width="438">
            <Button Content="ОК"
                    Name="OkButton"
                    IsEnabled="{Binding OkIsEnabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    IsDefault="True"
                    Command="{Binding OKCommand}"
                    Height="26"
                    Margin="210,0,0,0"
                    VerticalAlignment="Center"
                    Width="80"/>
            <Button Content="Отмена"
                    Name="CancelButton"
                    IsCancel="True"
                    Height="26"
                    Click="CancelButton_Click"
                    VerticalAlignment="Center"
                    Width="80" 
                    Margin="20,0,0,0"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Left" 
                    Height="349" 
                    Margin="408,10,0,0" 
                    VerticalAlignment="Top" 
                    Width="50" 
                    Grid.RowSpan="2">
            <Button Content=">>"
                    IsEnabled="{Binding ShowAuthorsListButton, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                    Command="{Binding ShowAuthorsListCommand}"
                    Margin="0,25,0,0"/>
            <Button Content=">>"
                    IsEnabled="{Binding ShowCommentsListButton,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                    Command="{Binding ShowCommentsListCommand}"
                    Margin="0,161,0,0"/>
        </StackPanel>
    </Grid>
</Window>
